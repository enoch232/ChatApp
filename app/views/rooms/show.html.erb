<h1>Chat App</h1>
<div>
	<div id = "messages">
		<%= render @messages %>
	</div>
	<div id = "text-input">
		<%= form_for(:room, url: rooms_path, remote: true) do |f| %>
		<%= f.label :name %>
		<br>
		<%= f.text_field :name %>
		<br>
		<%= f.label :message %>
		<br>
		<%= f.text_area :message, class: "message-input" %>
		<%= f.submit "Send" %>
		<% end %>

	</div>
</div>
